---
import Tailwind from "@/icons/Tailwind.astro";
import AstroIcon from "@/icons/AstroIcon.astro";
import ReactIcon from "@/icons/ReactIcon.astro";
import AngularIcon from "@/icons/AngularIcon.astro";
import MySqlIcon from "@/icons/MySqlIcon.astro";
import ExpressJSIcon from "@/icons/ExpressJSIcon.astro";
import JavaScriptIcon from "@/icons/JavaScriptIcon.astro";
import SQLServerIcn from "@/icons/SQLServerIcon.astro";
import GitIcon from "@/icons/GitIcon.astro";

const TAGS = [
  {
    name: "ASTRO",
    icon: AstroIcon,
  },
  {
    name: "React",
    icon: ReactIcon,
  },
  {
    name: "Angular",
    icon: AngularIcon,
  },
  {
    name: "JavaScript",
    icon: JavaScriptIcon,
  },
  {
    name: "Tailwind CSS",
    icon: Tailwind,
  },
  {
    name: "ExpressJS",
    icon: ExpressJSIcon,
  },
  {
    name: "MySQL",
    icon: MySqlIcon,
  },
  {
    name: "SQLServer",
    icon: SQLServerIcn,
  },
  {
    name: "Git",
    icon: GitIcon,
  },
];
---

<section class='flex items-center justify-center'>
  <ul class='grid sm:grid-cols-5 grid-cols-3 items-center'>
    {
      TAGS.map((tag) => (
        <li class='flex flex-col flex-wrap justify-center items-center size-28 gap-3'>
          <tag.icon class='size-8' />
          <h3 class='text-wrap font-semibold'>{tag.name}</h3>
        </li>
      ))
    }
  </ul>
</section>
